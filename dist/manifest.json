{
    "manifest_version": 2,
    "name": "Focus",
    "version": "0.1.0",
    "description": "Focus (for Trello). A browser plugoin to bring focus and efficiency to your Trello boards.",
    "short_name": "Skinner",
    "permissions": ["activeTab", "declarativeContent", "tabs", "storage"],
    "content_scripts": [
      {
        "matches": ["https://trello.com/b/*"],
        "css": ["injected.css"],
        "js": [ "injected.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    }
   }